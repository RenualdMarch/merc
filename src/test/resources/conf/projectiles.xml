<?xml version="1.0" encoding="UTF-8"?>
<projectiles>
	<projectile name="testProjectile">
		<start>
			<!-- just n and ne are enough, all other images are mirrored -->
			<!-- but there can be also "all" images -->
			<all>
				<image name="im1"/>
				<image name="im2"/>
			</all>
		</start>
		<move>
			<n>
				<image name="im3"/>
				<image name="im4"/>
			</n>
			<ne>
				<image name="im5"/>
				<image name="im6"/>
			</ne>
		</move>
		<end>
			<all>
				<image name="im7"/>
				<image name="im8"/>
				<image name="im9"/>
			</all>
		</end>
		<sounds>
			<start name="1"/>
			<move name="2"/>
			<end name="3"/>
		</sounds>
	</projectile>
	<projectile name="testProjectile2">
		<start>
			<all>
				<image name="im10"/>
			</all>
		</start>
		<move>
			<all>
				<image name="im10"/>
				<image name="im11"/>
			</all>
		</move>
		<end>
			<all>
				<image name="im11"/>
			</all>
		</end>
		<sounds>
			<start name="4"/>
			<end name="5"/>
		</sounds>
	</projectile>
	<projectile name="testProjectile3-succ">
		<start>
			<all>
				<image name="im0"/>
			</all>
		</start>
		<move>
			<all>
				<image name="im0"/>
				<image name="im1"/>
			</all>
		</move>
		<end>
			<all>
				<image name="im1"/>
			</all>
		</end>		
	</projectile>
	<projectile name="testProjectile3-fail">
		<start>
			<all>
				<image name="im0"/>
			</all>
		</start>	
		<move>
			<all>
				<image name="im0"/>
				<image name="im1"/>
			</all>
		</move>
		<end>
			<all>
				<image name="im1"/>
			</all>
		</end>			
	</projectile>
</projectiles>